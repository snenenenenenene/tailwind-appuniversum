<label
  for='{{@identifier}}'
  class='au-c-toggle-switch {{this.disabled}}'
  data-test-toggle-switch-label
>
  <Input
    @checked={{@checked}}
    @type='checkbox'
    class='au-c-toggle-switch__input au-u-hidden-visually'
    id='{{@identifier}}'
    name='{{@name}}'
    disabled={{@disabled}}
    data-test-toggle-switch-input
    {{on 'change' this.onChange}}
    ...attributes
  />
  <span class='au-c-toggle-switch__toggle'></span>
  <span class='au-c-toggle-switch__label'>{{@label}}</span>
</label>
